FROM node:22-bookworm@sha256:cd7bcd2e7a1e6f72052feb023c7f6b722205d3fcab7bbcbd2d1bfdab10b1e935

# Install Bun (required for build scripts)
RUN curl -fsSL https://bun.sh/install | bash
ENV PATH="/root/.bun/bin:${PATH}"

RUN corepack enable

WORKDIR /app
RUN chown node:node /app

COPY --chown=node:node package.json pnpm-lock.yaml pnpm-workspace.yaml .npmrc ./
COPY --chown=node:node ui/package.json ./ui/package.json
COPY --chown=node:node patches ./patches
COPY --chown=node:node scripts ./scripts

USER node
RUN pnpm install --frozen-lockfile

USER node
COPY --chown=node:node . .

# Canvas A2UI sources are excluded by .dockerignore (vendor/, apps/);
# create a stub bundle so the build script skips the bundling step.
RUN touch src/canvas-host/a2ui/a2ui.bundle.js

RUN pnpm build
# Force pnpm for UI build (Bun may fail on ARM/Synology architectures)
ENV OPENCLAW_PREFER_PNPM=1
RUN pnpm ui:build

ENV NODE_ENV=production

# Railway entrypoint handles WhatsApp QR login + gateway start
RUN chmod +x scripts/railway-entrypoint.sh

USER node
CMD ["bash", "scripts/railway-entrypoint.sh"]
